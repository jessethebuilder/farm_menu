<%= form_for(@menu) do |f| %>
	<%= error_messages(@menu) %>
  
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
  	<%= f.label :description %>
  	<%= f.text_area :description %>
  </div>
  
  <div class="form-group">
  	<label>
  		<%= f.check_box :published %>
  		Published?
  	</label>
  </div>
  
  <%= embedded_sections_form(f) %>
  
  <div class="actions">
    <%= f.submit %>
    
    <% unless @menu.new_record? %>
    	<%= link_to 'Destroy', menu_path(@menu), :method => :delete, :data => {:confirm => 'Are you sure? This is PERMANENT!'} %>
    <% end %>
  </div>
<% end %>
