<%= @demo.inspect %>

<%= form_for(@menu) do |f| %>
	<%= error_messages(@menu) %>
	  
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
  	<%= f.label :description %>
  	<%= f.text_area :description %>
  </div>
  
  <div class="form-group">
  	<label>
  		<%= f.check_box :published %>
  		Published?
  	</label>
  </div>
  
  <%= embedded_sections_form(f) %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
