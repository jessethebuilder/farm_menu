<%= form_builder.fields_for :sections do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	
	<div class="form-group">
		<label>
			<%= f.check_box :_destroy %> 
			Destroy? 
		</label>
	</div>
<% end %>
